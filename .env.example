# ========================================
# GambleGuard Environment Variables
# ========================================
# Copy this file to .env.local for local development
# For Cloud Run, set these in the console or via gcloud CLI

# ----------------------------------------
# Firebase Client SDK (Public - OK to expose)
# ----------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# ----------------------------------------
# Firebase Admin SDK (Server-side ONLY - NEVER expose)
# ----------------------------------------
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# ----------------------------------------
# Google Cloud (for Secret Manager)
# ----------------------------------------
GCP_PROJECT_ID=your-gcp-project-id

# ----------------------------------------
# Gemini API (for local development only)
# ----------------------------------------
# In production, this is stored in Secret Manager
GEMINI_API_KEY=your_gemini_api_key_here

# ----------------------------------------
# WebAuthn Configuration
# ----------------------------------------
# For local development:
NEXT_PUBLIC_WEBAUTHN_RP_NAME=GambleGuard
NEXT_PUBLIC_WEBAUTHN_RP_ID=localhost
NEXT_PUBLIC_WEBAUTHN_ORIGIN=http://localhost:3000

# For production (update with your Cloud Run URL):
# NEXT_PUBLIC_WEBAUTHN_RP_ID=your-app.a.run.app
# NEXT_PUBLIC_WEBAUTHN_ORIGIN=https://your-app.a.run.app

# ----------------------------------------
# Legacy (can be removed after migration)
# ----------------------------------------
# GCS_BUCKET_NAME=your-bucket-name
# NEXT_PUBLIC_GEMINI_API_KEY=your_api_key (moved to server-side)
